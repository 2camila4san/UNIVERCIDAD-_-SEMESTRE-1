Algoritmo Ejercicio1
	Definir Nombre Como Caracter; 
	Definir Salario, P1 , M1 Como Real;
	
	
	Escribir ' Nombre Del Trabajador: ';
	Leer Nombre;
	Escribir ' Salario Actual:';
	Leer Salario;
	Escribir 'Porcentaje De Aumento:';
	Leer P1;
	Escribir ' Meses De Trabajo';
	Leer M1;
	
	Porcentaje = Salario * P1 / 100;
	total = Porcentaje * M1
	
	Escribir 'El nombre del trabajador es:', Nombre;
	Escribir ' Nuevo Salario: ', total ' Durante 10 meses de trabajo';
	
FinAlgoritmo
